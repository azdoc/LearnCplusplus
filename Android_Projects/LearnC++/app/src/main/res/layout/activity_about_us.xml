<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cplusplus.learn.trinity.learnc.activites.AboutUs">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="cplusplus.learn.trinity.learnc.activites.TutorialDispalyActivity"
        tools:showIn="@layout/activity_tutorial_dispaly">

        <android.support.v7.widget.CardView
            android:id="@+id/card_viewTitle"
            style="@style/CardViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:foreground="?android:attr/selectableItemBackground">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:text="About Us"
                android:textColor="@color/colorAccent"
                android:textIsSelectable="true"
                android:textSize="22dp" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_viewDescription"
            style="@style/CardViewStyle"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="10dp"
            android:layout_marginTop="100dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/title_ver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Learn C++"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"
                    android:textStyle="bold"
                    android:textSize="20dp" />
                <TextView
                    android:id="@+id/text_version"
                    android:layout_below="@+id/title_ver"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="25dp"
                    android:text="Version 1.0\nCopyright(c) Triotales 2020 All rights reserved"
                    android:textSize="16dp"
                    android:textStyle="italic" />

                <View
                    android:id="@+id/line_seperator1"
                    android:layout_below="@+id/text_version"
                    android:layout_width="fill_parent"
                    android:layout_margin="15dp"
                    android:layout_height="1dp"
                    android:background="@color/black" />

                <TextView
                    android:id="@+id/title_sup"
                    android:layout_below="@+id/line_seperator1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Support"
                    android:layout_marginLeft="25dp"
                    android:textStyle="bold"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/text_sup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/title_sup"
                    android:layout_margin="25dp"
                    android:text="Please leave any questions,suggestions or comments on\nEmail:triotales.developers@gmail.com"
                    android:textSize="15dp" />
                <View
                    android:id="@+id/line_seperator2"
                    android:layout_below="@+id/text_sup"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_margin="15dp"
                    android:background="@color/black" />

                <TextView
                    android:id="@+id/title_dev"
                    android:layout_below="@+id/line_seperator2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Developers"
                    android:layout_marginLeft="25dp"
                    android:textStyle="bold"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/text_dev"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/title_dev"
                    android:layout_margin="25dp"
                    android:text="triotales.developers@gmail.com"
                    android:textSize="15dp" />

                <View
                    android:id="@+id/line_seperator3"
                    android:layout_below="@+id/text_dev"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_margin="15dp"
                    android:background="@color/black" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
